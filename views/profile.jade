doctype html
html(lang='en')
  include includes/head.jade
  body
    include includes/header.jade
    main.container.white
      div.row
        div.col-sm-12
          h2=user.firstName+" "+user.lastName
      div.row
        div.col-sm-4
          img.img-responsive(src=user.photo, alt=user.firstName, style='background: black')
        div.col-sm-8
          h3="Location"
          div(style='display: flex')
            div(style='flex: 1')
              p!=user.address.street+"<br>"+user.address.apt+"<br>"+user.address.city+", "+user.address.state+" "+user.address.zip
            div(style='flex: 1')
              div#map
          h3="Instruments"
          div.instruments
            each instrument in user.instruments
              div.instrument
                p=ucfirst(instrument.name)
                p="Skill: "+ucfirst(instrument.skill)
                p="Years: "+instrument.years
          h3="Genres"
          div.genres
            each genre in user.genres
              div.genre
                p=ucfirst(genre)
          h3="Influences"
          div.Influences
            each influence in user.influences
              div.influence
                p=influence
    include includes/footer.jade
