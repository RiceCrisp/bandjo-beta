block content
  mixin pencil
    svg.pencil(width='20' height='20' viewBox='0 0 24 24')
      path(d='M19.769 9.923l-12.642 12.639-7.127 1.438 1.438-7.128 12.641-12.64 5.69 5.691zm1.414-1.414l2.817-2.82-5.691-5.689-2.816 2.817 5.69 5.692z')
  div.row
    div.col-sm-12
      h2!='{{results.firstName}}' + ' ' + '{{results.lastName}}'
  div.row
    div.col-sm-4
      section
        img.img-responsive.profile-pic(src='{{results.photo}}', alt='{{results.firstName}}', style='background: black')
        - if (edit)
          svg.pencil(width='26' height='26' viewBox='0 0 24 24' style='position: absolute; top: 1; right: 16px; padding: 3px;')
            path(d='M19.769 9.923l-12.642 12.639-7.127 1.438 1.438-7.128 12.641-12.64 5.69 5.691zm1.414-1.414l2.817-2.82-5.691-5.689-2.816 2.817 5.69 5.692z')
      section
        header
          h4="Contacts"
    div.col-sm-8
      section.editable
        header
          h3="Location"
            if (edit)
              +pencil
        div(style='display: flex')
          div(style='flex: 1')
            p!='{{results.address.street}}'+'<br>'+'{{results.address.apt}}'+'<br>'+'{{results.address.city}}'+', '+'{{results.address.state}}'+' '+'{{results.address.zip}}'
          div(style='flex: 1')
            div#map
      section.editable
        header
          h3="Instruments"
            if (edit)
              +pencil
        div.instruments
          ul.boxes
            li.instrument(ng-repeat='instrument in results.instruments')
              p.cap!='<b>'+'{{instrument.name}}'+'</b>'
              p.cap='{{instrument.skill}}'
              p!='{{instrument.years}}'+('{{instrument.years}}'==1 ? " year" : " years")
      section.editable
        header
          h3="Genres"
            if (edit)
              +pencil
        div.genres
          ul.boxes
            li.genre.cap(ng-repeat='genre in results.genres')='{{genre}}'
      section.editable
        header
          h3="Influences"
            if (edit)
              +pencil
        div.influences
          ul.boxes
            li.influence.cap(ng-repeat='influence in results.influences')='{{influence}}'
