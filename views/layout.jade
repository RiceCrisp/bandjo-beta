doctype html
html(lang='en')
  block scripts
    title="Band.jo"
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    base(href='/')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-2.2.3.min.js', integrity='sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
    script(src='modules/angular/angular.js')
    script(src='modules/angular-route/angular-route.js')
    //script(src='modules/angular-cookies/angular-cookies.js')
    script(src='assets/js/controllers.js')
    script(src='assets/js/routes.js')
    //script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBkKaE--mik3N8qLk0D2494Eq-tQgMntds&callback=initMap', async, defer)
    link(rel='stylesheet', href='assets/css/style.min.css')
    //script(src='../js/maps.min.js')
  body(ng-app='myApp')
    block header
      header
        nav.navbar.navbar-default
          div.container
            div.navbar-header
              a.navbar-brand(href='/')="Bandjo"
            div.navbar-right
              - if (loggedInID) {
                img(src='{{results.photo}}', style='width:40px; height:40px; border-radius:50%;')
                a.btn.btn-default.navbar-btn(href='/logout')="Log Out"
              - } else {
                a.btn.btn-default.navbar-btn(href='/')="Log In"
              - }
    block content
      main.container
        div.row
          div.col-sm-4
            form#login-form.white(action='/login', method='post')
              if errMsg
                p.bg-info=errMsg
              label(for='email')="Email"
              br
              input#email(name='email', type='email', value=email)
              br
              label(for='password')="Password"
              br
              input#password(name='password', type='password')
              br
              input#remember(name='remember', type='checkbox')
              label(for='remember')="Remember me"
              br
              input#forgot(name='forgot', type='checkbox')
              label(for='forgot', style='margin-bottom: 12px')="Forgot password"
              br
              input.blue-btn(type='submit', value='Log In')
              a.blue-btn(href='/signup')="Sign Up"
          div.col-sm-8
            div.white
              h2="Latest Users"
              img.img-responsive(src=results.photo, width='100', alt=results.firstName, style='background: black')
              a(href=results.link)
                h3=results.firstName+" "+results.lastName
              p
                b="Instruments: "
                //results.instruments
    block footer
      footer
        div.container
          small="Bandjo is maintained by Blake Boucher. Go tell 'em."
