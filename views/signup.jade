doctype html
html(lang='en')
  include includes/head.jade
  body
    include includes/header.jade
    main.container
      div.row
        form#signup-form.white(action='/signup', method='post')
          table
            tr
              td
                label(for='first-name')="First Name"
                br
                input#first-name(name='firstName', type='text')
              td
                label(for='last-name')="Last Name"
                br
                input#last-name(name='lastName', type='text')
            tr
              td
                label(for='email')="Email"
                br
                input#email(name='email', type='email')
              td
                label(for='email2')="Re-enter Email"
                br
                input#email2(name='email2', type='email')
            tr
              td
                label(for='password')="Password"
                br
                input#password(name='password', type='password')
              td
                label(for='password2')="Re-enter Password"
                br
                input#password2(name='password2', type='password')
            tr
              td
                input.blue-btn(type='submit', value='Sign Up')
    include includes/footer.jade
